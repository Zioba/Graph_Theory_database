concept_directed_tree
	<= nrel_inclusion:
		graph;

	=> nrel_main_idtf: 
		[ориентированное дерево] (* <-lang_ru;; *);
		[directed tree] (* <-lang_en;; *);


	<-rrel_key_sc_element:
		...  
		(*<-sc_definition;;
		=> nrel_main_idtf: [Опр.(Ориентированный дерево)] (* <- lang_ru;; *);;
		<=nrel_sc_text_translation:
		...
			(*
			-> rrel_example: 
				[Ориентированное (направленное) дерево — ацикличный орграф (ориентированный граф, не содержащий циклов), в котором только одна вершина имеет нулевую степень захода (в неё не ведут дуги), а все остальные вершины имеют степень захода 1 (в них ведёт ровно по одной дуге).] (*<-lang_ru;;*);;
			*);;
		*);


	<- rrel_key_sc_element: 
        ... 
		(*
		<- sc_explanation;;
		<= nrel_sc_text_translation: ...
			(*
			-> rrel_example: 
				[Вершина с нулевой степенью захода называется корнем дерева.]
					(* <- lang_ru;; *);;
			*);;
		*);
	<- rrel_key_sc_element: 
        ... 
		(*
		<- sc_explanation;;
		<= nrel_sc_text_translation: ...
			(*
			-> rrel_example: 
				[вершины с нулевой степенью исхода (из которых не исходит ни одна дуга) называются концевыми вершинами или листьями.]
					(* <- lang_ru;; *);;
			*);;
		*);
	
<- rrel_key_sc_element: 
	...
	(*
		<- sc_illustration;;
		<= nrel_sc_text_translation:
		...
			(*
			-> rrel_example:
				"file://contents/concept_directed_tree.jpg";;
			*);;
	*);;

concept_graph => nrel_inclusion: concept_directed_tree;;
concept_directed_graph => nrel_inclusion: concept_directed_tree;;
